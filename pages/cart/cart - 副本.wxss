/* pages/cart/cart.wxss */

.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cart-empty-img {
  opacity: 0.3;
}

.cart-empty-text {
  font-size: 36rpx;
}

.cart-empty-btn {
 font-size: 30rpx;
  margin-top: 30rpx;
}
.cart-item{
  display: flex;
  flex-direction: column;
  justify-content: center;

}
.cart-item-list-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 8%;
  border: 1rpx solid gainsboro;
}
.cart-item-list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.cart-item-list-info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
   font-size: 26rpx;
 
}
.cart-item-list-num{
  display: flex;
  justify-content: space-around;
  align-content: center;
  /* align-self: flex-end; */
}
    .cart-goods-num{
      border: 1rpx solid gainsboro;
      width: 50rpx;
      text-align: center;
      font-size: 24rpx;
      margin: auto 10rpx;
     
    
    }
    .cart-goods-price{
      color: red;
      font-size: 28rpx;
      font-weight: bold;
    }
    .cart-goods-info{
      margin: 15rpx auto;
     
    }
